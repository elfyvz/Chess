<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Beastly&family=Slackey&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Madimi+One&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5aa63ed45f.js" crossorigin="anonymous"></script>
    
</head>

<body>
    <header id="header">
        <div>
            <div class="logo">
                <a href="#" class="slackey-regular">Chess</a>
            </div>
            <a href="#" class="profile-link">
                <div class="profile">
                    <i class="fa-solid fa-user"></i>
                    <h1 class="madimi-one-regular">Login</h1>
                </div>
            </a>
            <div class="navbar">
                <nav>
                    <ul>
                        <li><i class="fa-solid fa-chess"></i><a href="/Home/Play">Play</a></li>
                        <li><i class="fa-solid fa-chess-board"></i><a href="">Learn</a></li>
                        <li><i class="fa-solid fa-puzzle-piece"></i><a href="">Puzzles</a></li>
                        <li><i class="fa-solid fa-calendar-days"></i><a href="">Events</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    @RenderBody()


    <script src="~/Scripts/main.js" type="text/javascript"></script>
</body>
</html>


